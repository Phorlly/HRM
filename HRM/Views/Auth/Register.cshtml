@model HRM.Models.User
@{ Layout = "~/Views/Shared/_Layout.cshtml";}
<div class="row">
    <div class="col-md-12">
        <div id="registerPanel" class="panel panel-primary well">
            <div class="panel-heading">
                <h3 class="panel-title text-center">SIGN UP PAGE</h3>
            </div>
            <div class="panel-body">
                <section>
                    <form method="post" id="registerForm" enctype="multipart/form-data">

                        <div class="col">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="fullname">Full Name</label>
                                                <input type="text" name="username" id="username" value="" class="form-control"
                                                       autocomplete="on" autofocus placeholder="Enter Full Name" />
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="Gender">Gender</label>
                                                <select name="gender" id="gender" class="form-control ">
                                                    <option selected value="true">Male</option>
                                                    <option value="false">Female</option>
                                                </select>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="Email">Email Address</label>
                                                <input type="text" name="email" id="email" value="" class="form-control"
                                                       autocomplete="on" autofocus placeholder="Enter Email Address" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="Phone">Phone Number</label>
                                                <input type="tel" name="phone" id="phone" value="" class="form-control"
                                                       autocomplete="on" autofocus placeholder="Enter Phone Number" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="Password">Password</label>
                                                <input type="password" name="password" id="password" value="" class="form-control"
                                                       autocomplete="on" autofocus placeholder="Enter Password" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="ConfirmPassword">Current Address</label>
                                                <input type="text" name="address" id="address" value="" class="form-control"
                                                       autocomplete="on" autofocus placeholder="Enter Current Address" />

                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <br />
                                <div class="col-md-3" style="padding-left: 5rem">
                                    <div class="row">
                                        <div class="form-group">
                                            <img class="center img-responsive img-thumbnail"
                                                 style="width: 17rem; height: 15rem;" src="~/Images/blank-image.png" id="image" />

                                            <b class="btn-style btn btn-info">
                                                <i class="fa fa-upload pe-lg-3"></i> Upload Image
                                                <input onchange="readUrl(this);" type="file" id="imageFile" name="imageFile" />
                                            </b>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <footer class="row">
                                <div class="col-md-9">
                                    <button type="submit" class="btn btn-primary btn-block text-xl-center">
                                        <i class="fas fa-user-edit"></i>
                                        CREATE ACCOUNT
                                    </button>
                                </div>
                            </footer>
                        </div>
                    </form>
                </section>
            </div>
        </div>

    </div>
</div>

@*==================script js=================*@
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script src="~/Scripts/Functions/auth.js"></script>


<script>
    //=====================read image============================//
    const readUrl = (input) => {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#image").attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>


