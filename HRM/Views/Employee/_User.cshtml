 <!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Static backdrop</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>I will not close if you click outside me. Don't even try to press escape key.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger waves-effect" data-bs-dismiss="modal">
                    <i class="ri-delete-back-2-line align-middle"></i> Close
                </button>
                <button type="button" class="btn btn-warning waves-effect waves-light" id="save">
                    <i class="fas fa-save"></i> Save
                </button>
                <button type="button" class="btn btn-success waves-effect waves-light" id="update">
                    <i class="fas fa-redo"></i> Update
                </button>
            </div>
        </div>
    </div>
</div>